{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/modules/*": [
        "src/modules/*"
      ],
      "@/configs/*": [
        "src/configs/*"
      ],
      "@/errors/*": [
        "src/errors/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}